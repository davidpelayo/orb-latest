{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": [
    "<rootDir>/test/setup.js"
  ],
  "testMatch": [
    "**/test/spec/**/*.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/**/orb.react.compiled.js",
    "!**/node_modules/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  },
  "transform": {
    "^.+\\.(js|jsx)$": [
      "babel-jest",
      {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "current"
              }
            }
          ],
          [
            "@babel/preset-react",
            {
              "runtime": "automatic"
            }
          ]
        ]
      }
    ]
  }
}
